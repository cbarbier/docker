docker run -it --name Abathur -v $HOME:/root -p 3000:3000 -d python:2-slim;
docker exec Abathur pip install flask;
docker exec -it Abathur bash;
echo "from flask import Flask
app =  Flask(__name__)
@app.route('/')
def hello_world():
	return '<h1>Hello World!</h1>'" > hello.py;
exit;
docker exec -e FLASK_APP=hello.py Abathur flask run -p 3000 --host=0.0.0.0;
